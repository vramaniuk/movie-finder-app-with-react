# Base editorconfig for new projects

root = true

[*]
end_of_line = crlf
indent_style = space
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
autocrlf = false
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
